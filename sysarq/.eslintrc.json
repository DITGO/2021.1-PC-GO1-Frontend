{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["plugin:react/recommended", "airbnb", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"ignorePatterns": ["*.test.js"],
	"rules": {
		// Define a extens√£o dos arquivos analisados
		"react/jsx-filename-extension": [1, { "extensions": [".js"] }],

		// Desabilitar a necessidade de import React em todo arquivo do projeto
		"react/react-in-jsx-scope": "warn"
	}
}
